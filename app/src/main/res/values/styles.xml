<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/quantum_deeporangeA700</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- DEFAULT TEXT THEME -->
    <style name="Go4LunchText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#fbe9e7</item>
    </style>

    <style name="SignInButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/browser_actions_divider_color</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

    <style name="RestaurantDetailsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="TimeRestaurantClosed">
        <item name="android:textColor">@color/colorTextRed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimeRestaurantClosingSoon">
        <item name="android:textColor">@color/quantum_orange</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TimeRestaurantOpen">
        <item name="android:textColor">@color/quantum_googgreen</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>





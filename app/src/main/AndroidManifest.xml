<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--PERMISSIONS-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Go4Lunch24"
        tools:targetApi="31">


        <!--GOOGLE MAP API-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAqNBq03TA3U5NKCdGr7qrWHlIh5lsOI2w"/>

        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Go4Lunch24">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.go4lunch24kotlin.ui.MainActivity"
            android:parentActivityName="com.example.go4lunch24kotlin.ui.LoginActivity" />
        <activity
            android:name="com.example.go4lunch24kotlin.ui.RestaurantDetailsActivity"
            android:parentActivityName="com.example.go4lunch24kotlin.ui.MainActivity" />
        <activity
            android:name="com.example.go4lunch24kotlin.ui.SettingActivity"
            android:parentActivityName="com.example.go4lunch24kotlin.ui.MainActivity" />

    </application>

</manifest>